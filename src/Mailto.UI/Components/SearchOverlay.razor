<div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/40 backdrop-blur-sm">
    <div class="w-full max-w-4xl bg-white dark:bg-[#101622] rounded-xl shadow-2xl overflow-hidden border border-white/10 flex flex-col">
        <!-- Command Bar Search -->
        <div class="p-4 border-b border-white/10 flex items-center gap-4 bg-white dark:bg-[#1a1f2e]">
            <span class="material-icons-round text-primary text-2xl">search</span>
            <input class="flex-1 bg-transparent border-none focus:ring-0 text-xl font-medium placeholder-slate-500 text-slate-900 dark:text-white" placeholder="Search across Mailto..." type="text" />
            <button class="px-2 py-1 bg-slate-100 dark:bg-white/5 border border-slate-200 dark:border-white/10 rounded text-[10px] font-bold text-slate-400 uppercase tracking-widest" @onclick="OnClose">Esc</button>
        </div>

        <!-- Advanced Filters -->
        <div class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6 border-b border-slate-200 dark:border-white/10 bg-slate-50 dark:bg-white/5">
             <div class="space-y-4">
                <div>
                    <label class="block text-[11px] font-bold text-slate-500 uppercase tracking-wider mb-2">Search In</label>
                    <select class="w-full bg-white dark:bg-slate-900 border border-slate-200 dark:border-white/10 rounded-lg py-2 pl-3 text-sm dark:text-white">
                        <option>All Folders</option>
                        <option>Inbox</option>
                    </select>
                </div>
             </div>
             <div class="space-y-4">
                 <button class="w-full bg-primary text-white py-2 rounded-lg text-sm font-bold shadow-lg shadow-primary/20">Apply Filters</button>
             </div>
        </div>

        <div class="p-8 text-center text-slate-500">
            Start typing to see results...
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnClose { get; set; }
}
