@page "/admin/audit-logs"
@using Mailto.UI.Components

<div class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 h-full flex font-display antialiased overflow-hidden">
    <!-- Middle Sidebar (Local Context) -->
    <aside class="w-64 border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 flex flex-col pt-6 shrink-0 transition-all duration-300">
        <nav class="space-y-1 w-full px-4">
            <a class="flex items-center gap-3 px-3 py-2.5 text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-lg font-medium transition-colors" href="/admin/tenants">
                <span class="material-icons-round">dashboard</span>
                <span>Overview</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2.5 text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-lg font-medium transition-colors" href="/admin/tenants">
                <span class="material-icons-round">business</span>
                <span>Tenants</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2.5 bg-primary/10 text-primary rounded-lg font-medium" href="/admin/audit-logs">
                <span class="material-icons-round">security</span>
                <span>Audit Logs</span>
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col overflow-hidden bg-white dark:bg-background-dark">
        <header class="flex items-center justify-between border-b border-slate-200 dark:border-slate-800 bg-white/70 dark:bg-background-dark/70 backdrop-blur-md px-6 py-4">
            <h1 class="text-xl font-bold">Audit Logs</h1>
            <div class="flex items-center gap-4">
                <span class="material-icons-round text-slate-400 cursor-pointer hover:text-primary transition-colors">search</span>
            </div>
        </header>

        <div class="flex-1 overflow-auto">
            <table class="w-full text-left border-separate border-spacing-0">
                <thead class="sticky top-0 z-10">
                    <tr class="bg-slate-50 dark:bg-slate-800/50 border-b border-slate-200 dark:border-slate-700">
                        <th class="px-6 py-3 text-xs font-bold text-slate-400 uppercase tracking-wider">Timestamp</th>
                        <th class="px-6 py-3 text-xs font-bold text-slate-400 uppercase tracking-wider">Severity</th>
                        <th class="px-6 py-3 text-xs font-bold text-slate-400 uppercase tracking-wider">User</th>
                        <th class="px-6 py-3 text-xs font-bold text-slate-400 uppercase tracking-wider">Action</th>
                    </tr>
                </thead>
                <tbody class="text-sm divide-y divide-slate-100 dark:divide-slate-800">
                    <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                        <td class="px-6 py-4 text-slate-500">2024-03-15 11:15:00</td>
                        <td class="px-6 py-4"><span class="px-2 py-1 rounded text-[10px] font-bold bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">INFO</span></td>
                        <td class="px-6 py-4 font-medium">admin@mailto.io</td>
                        <td class="px-6 py-4">Tenant: <span class="text-primary font-bold">alpha-sector</span> created successfully</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>
