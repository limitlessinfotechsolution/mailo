@page "/admin/tenants"
@using Mailto.UI.Components

<div class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 h-full flex font-display antialiased overflow-hidden">
    <!-- Middle Sidebar (Local Context) -->
    <aside class="w-64 border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 flex flex-col pt-6 shrink-0 transition-all duration-300">
        <nav class="space-y-1 w-full px-4">
            <a class="flex items-center gap-3 px-3 py-2.5 bg-primary/10 text-primary rounded-lg font-medium" href="/admin/tenants">
                <span class="material-icons-round">dashboard</span>
                <span>Overview</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2.5 text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-lg font-medium transition-colors" href="/admin/tenants">
                <span class="material-icons-round">business</span>
                <span>Tenants</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2.5 text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-lg font-medium transition-colors" href="/admin/audit-logs">
                <span class="material-icons-round">security</span>
                <span>Audit Logs</span>
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto">
        <!-- Header -->
        <header class="sticky top-0 z-10 bg-white/70 dark:bg-background-dark/70 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 px-8 py-4 flex items-center justify-between">
            <div>
                <h1 class="text-xl font-bold">Platform Overview</h1>
                <p class="text-xs text-slate-500 font-medium">System status: All services operational</p>
            </div>
            <div class="flex items-center gap-4">
                <div class="relative hidden md:block">
                    <span class="material-icons-round absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-lg">search</span>
                    <input class="pl-10 pr-4 py-2 bg-slate-100 dark:bg-slate-800 border-none rounded-lg text-sm w-64 focus:ring-2 focus:ring-primary transition-all" placeholder="Search tenants, domains..." type="text" />
                </div>
                <button class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400">
                    <span class="material-icons-round">notifications</span>
                </button>
            </div>
        </header>

        <div class="p-8">
            <!-- Analytics Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-soft border border-slate-200 dark:border-slate-800">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-10 h-10 bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-lg flex items-center justify-center">
                            <span class="material-icons-round">corporate_fare</span>
                        </div>
                        <span class="text-xs font-bold text-green-500 flex items-center bg-green-50 dark:bg-green-900/20 px-2 py-1 rounded-full">+12%</span>
                    </div>
                    <p class="text-slate-500 text-sm font-medium">Total Tenants</p>
                    <h3 class="text-2xl font-extrabold mt-1">1,284</h3>
                </div>
                <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-soft border border-slate-200 dark:border-slate-800">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-10 h-10 bg-indigo-50 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400 rounded-lg flex items-center justify-center">
                            <span class="material-icons-round">group</span>
                        </div>
                        <span class="text-xs font-bold text-green-500 flex items-center bg-green-50 dark:bg-green-900/20 px-2 py-1 rounded-full">+4.2k</span>
                    </div>
                    <p class="text-slate-500 text-sm font-medium">Active Users</p>
                    <h3 class="text-2xl font-extrabold mt-1">42,891</h3>
                </div>
                <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-soft border border-slate-200 dark:border-slate-800">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-10 h-10 bg-amber-50 dark:bg-amber-900/30 text-amber-600 dark:text-amber-400 rounded-lg flex items-center justify-center">
                            <span class="material-icons-round">storage</span>
                        </div>
                        <span class="text-xs font-bold text-slate-500 flex items-center">78% Full</span>
                    </div>
                    <p class="text-slate-500 text-sm font-medium">Storage Usage</p>
                    <div class="mt-3 h-2 bg-slate-100 dark:bg-slate-800 rounded-full overflow-hidden">
                        <div class="h-full bg-amber-500 rounded-full w-[78%]"></div>
                    </div>
                </div>
                <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-soft border border-slate-200 dark:border-slate-800">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-10 h-10 bg-green-50 dark:bg-green-900/30 text-green-600 dark:text-green-400 rounded-lg flex items-center justify-center">
                            <span class="material-icons-round">check_circle</span>
                        </div>
                        <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                    </div>
                    <p class="text-slate-500 text-sm font-medium">System Health</p>
                    <h3 class="text-2xl font-extrabold mt-1">Stable</h3>
                </div>
            </div>

            <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
                <!-- Tenant Management Table -->
                <div class="xl:col-span-2 bg-white dark:bg-slate-900 rounded-xl shadow-soft border border-slate-200 dark:border-slate-800 overflow-hidden flex flex-col">
                    <div class="p-6 border-b border-slate-100 dark:border-slate-800 flex items-center justify-between bg-slate-50/50 dark:bg-slate-800/20">
                        <h2 class="text-lg font-bold">Recent Tenants</h2>
                        <div class="flex gap-2">
                            <button class="text-xs font-semibold px-3 py-1.5 border border-slate-200 dark:border-slate-700 rounded-lg hover:bg-white dark:hover:bg-slate-800 transition-all">Export</button>
                            <button class="text-xs font-semibold px-3 py-1.5 border border-slate-200 dark:border-slate-700 rounded-lg hover:bg-white dark:hover:bg-slate-800 transition-all">Filter</button>
                        </div>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead class="text-xs font-bold text-slate-400 uppercase tracking-wider bg-slate-50 dark:bg-slate-800/50">
                                <tr>
                                    <th class="px-6 py-4">Company Name</th>
                                    <th class="px-6 py-4">Primary Domain</th>
                                    <th class="px-6 py-4">Plan Type</th>
                                    <th class="px-6 py-4">Status</th>
                                    <th class="px-6 py-4 text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
                                <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            <div class="w-8 h-8 rounded bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-500 text-xs font-bold">NV</div>
                                            <span class="font-semibold text-sm">Novatech GMBH</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-slate-500">novatech.io</td>
                                    <td class="px-6 py-4">
                                        <span class="text-xs font-medium px-2 py-1 rounded-md bg-indigo-50 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-300">Enterprise</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-1.5 text-xs font-semibold text-green-600 dark:text-green-400">
                                            <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span> Active
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <button class="text-slate-400 hover:text-primary"><span class="material-icons-round">more_vert</span></button>
                                    </td>
                                </tr>
                                <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            <div class="w-8 h-8 rounded bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-500 text-xs font-bold">AS</div>
                                            <span class="font-semibold text-sm">Astro Systems</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-slate-500">astro.space</td>
                                    <td class="px-6 py-4">
                                        <span class="text-xs font-medium px-2 py-1 rounded-md bg-primary/10 text-primary">Business Plus</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-1.5 text-xs font-semibold text-green-600 dark:text-green-400">
                                            <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span> Active
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <button class="text-slate-400 hover:text-primary"><span class="material-icons-round">more_vert</span></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Right Side Panel -->
                <div class="space-y-6">
                    <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-soft border border-slate-200 dark:border-slate-800">
                        <h2 class="text-lg font-bold mb-4">Quick Actions</h2>
                        <div class="space-y-3">
                            <button class="w-full bg-primary text-white py-3 rounded-lg font-bold flex items-center justify-center gap-2 hover:bg-blue-700 transition-colors shadow-lg shadow-primary/20">
                                <span class="material-icons-round text-lg">add_business</span> Provision New Tenant
                            </button>
                            <button class="w-full bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 py-3 rounded-lg font-bold flex items-center justify-center gap-2 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">
                                <span class="material-icons-round text-lg">description</span> Generate Report
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
