@page "/settings/security"

<div class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-200 font-display antialiased h-full flex overflow-hidden">
    <!-- Sub-sidebar for Settings -->
    <aside class="w-64 flex-shrink-0 bg-surface-light dark:bg-surface-dark border-r border-border-light dark:border-border-dark flex flex-col pt-6 pb-4">
        <nav class="flex-1 px-4 space-y-1">
            <div class="pt-2 pb-2 px-3 text-xs font-semibold text-slate-400 uppercase tracking-wider">Settings</div>
            <a class="flex items-center gap-3 px-3 py-2 text-slate-500 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors" href="/settings/profile">
                <span class="material-icons-round text-[20px]">person</span>
                <span class="text-sm font-medium">Public Profile</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2 bg-primary/10 text-primary rounded-lg transition-colors" href="/settings/security">
                <span class="material-icons-round text-[20px]">security</span>
                <span class="text-sm font-medium">Security</span>
            </a>
        </nav>
    </aside>

    <main class="flex-1 flex flex-col overflow-hidden">
        <header class="h-16 flex items-center justify-between px-8 border-b border-border-light dark:border-border-dark bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-md sticky top-0 z-10">
            <h1 class="text-lg font-bold text-slate-800 dark:text-white">Security Settings</h1>
        </header>

        <div class="flex-1 overflow-y-auto p-8">
            <div class="max-w-3xl mx-auto space-y-10">
                <section>
                    <h3 class="text-sm font-bold text-slate-500 mb-4 uppercase tracking-wider">Authentication</h3>
                    <div class="bg-surface-light dark:bg-surface-dark rounded-xl border border-border-light dark:border-border-dark shadow-soft overflow-hidden divide-y divide-border-light dark:border-border-dark">
                        <div class="flex items-center justify-between p-4 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                            <div class="flex items-center gap-3">
                                <div class="bg-blue-100 dark:bg-blue-900/30 p-2 rounded-lg">
                                    <span class="material-icons-round text-blue-600 dark:text-blue-400 text-[20px]">verified_user</span>
                                </div>
                                <div class="flex flex-col">
                                    <span class="text-sm font-bold">Two-Factor Authentication</span>
                                    <span class="text-xs text-slate-500">Adds an extra layer of security to your account</span>
                                </div>
                            </div>
                            <div class="flex items-center gap-3">
                                <span class="text-xs text-blue-600 font-bold mr-2">ENABLED</span>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>
</div>
