@page "/settings/security"

<div class="flex h-screen w-full overflow-hidden bg-[#f6f6f6] text-[#1e1e1e] font-display antialiased">
    <aside class="w-64 flex-shrink-0 flex flex-col border-r border-black/10 bg-[#ebebeb]/80 backdrop-blur-xl">
        <div class="h-12 flex items-center px-4 gap-2">
            <div class="w-3 h-3 rounded-full bg-[#ff5f57]"></div>
            <div class="w-3 h-3 rounded-full bg-[#ffbd2e]"></div>
            <div class="w-3 h-3 rounded-full bg-[#28c840]"></div>
        </div>
        <nav class="flex-1 px-2 space-y-0.5 mt-4">
            <a class="flex items-center gap-3 px-2 py-1.5 rounded-md text-sm font-medium text-gray-700 hover:bg-black/5" href="/settings/profile">
                <span class="material-symbols-outlined text-[20px] text-blue-500">person</span>
                <span>Profile</span>
            </a>
            <a class="flex items-center gap-3 px-2 py-1.5 rounded-md text-sm font-medium bg-primary text-white shadow-sm" href="/settings/security">
                <span class="material-symbols-outlined text-[20px]">security</span>
                <span>Security</span>
            </a>
        </nav>
    </aside>

    <main class="flex-1 overflow-y-auto">
        <div class="max-w-[720px] mx-auto px-8 py-10">
            <header class="mb-8">
                <h1 class="text-2xl font-bold tracking-tight">Security</h1>
            </header>
            <div class="mb-8">
                <h3 class="text-[13px] font-semibold text-gray-500 px-4 mb-1.5 uppercase tracking-wider">Authentication</h3>
                <div class="bg-white rounded-xl border border-black/10 shadow-sm overflow-hidden divide-y divide-black/10">
                    <div class="flex items-center justify-between p-4 hover:bg-gray-50 transition-colors">
                        <div class="flex items-center gap-3">
                            <div class="bg-blue-100 p-2 rounded-lg">
                                <span class="material-symbols-outlined text-blue-600 text-[20px]">verified_user</span>
                            </div>
                            <div class="flex flex-col">
                                <span class="text-sm font-medium">Two-Factor Authentication</span>
                                <span class="text-xs text-gray-500">Adds an extra layer of security to your account</span>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="text-xs text-blue-600 font-medium mr-2">On</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
