@page "/settings/language"

<div class="bg-[#f6f6f8] dark:bg-[#101622] text-slate-800 dark:text-slate-100 font-display min-h-screen flex overflow-hidden antialiased">
    <aside class="w-64 border-r border-slate-200 dark:border-slate-800 flex flex-col pt-5 z-20">
        <nav class="flex-1 px-2 space-y-0.5 mt-4">
            <a class="flex items-center gap-3 px-3 py-1.5 text-sm font-medium rounded-lg bg-primary text-white shadow-md" href="/settings/language">
                <span class="material-icons-round text-[18px]">language</span> Language & Region
            </a>
            <a class="flex items-center gap-3 px-3 py-1.5 text-sm font-medium rounded-lg text-slate-600 dark:text-slate-300 hover:bg-white/5" href="/settings/profile">
                <span class="material-icons-round text-[18px]">person</span> Profile
            </a>
        </nav>
    </aside>

    <main class="flex-1 flex flex-col h-screen overflow-hidden">
        <header class="h-16 flex items-center px-8 border-b border-slate-200 dark:border-slate-800 sticky top-0 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md">
            <h1 class="text-xl font-bold">Language & Region</h1>
        </header>
        <div class="flex-1 overflow-y-auto p-8">
            <div class="max-w-3xl mx-auto space-y-6">
                <section>
                    <h2 class="text-xs font-semibold uppercase text-slate-500 mb-3 ml-1">Region & Formats</h2>
                    <div class="bg-white dark:bg-[#1a2233] rounded-xl border border-slate-200 dark:border-slate-800 p-5 space-y-5 shadow-sm">
                        <div class="grid grid-cols-12 gap-4 items-center">
                            <label class="col-span-4 text-sm font-medium">Region</label>
                            <div class="col-span-8">
                                <select class="w-full bg-slate-100 dark:bg-[#232d42] border-none rounded-lg py-2 pl-3 pr-10 text-sm focus:ring-2 focus:ring-primary shadow-inner">
                                    <option>United States</option>
                                    <option>United Kingdom</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>
</div>
